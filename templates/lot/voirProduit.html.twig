{% extends 'base.html.twig' %}

{% block title %}Les produit en fonction du lot {{ lot.nom }}{% endblock %}

{% block body %}
    <h1>Les produits de {{ lot.nom }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Artiste</th>
            <th>Style</th>
            <th>Region</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.artiste }}</td>
                <td>{{ produit.style }}</td>
                <td>{{ produit.region }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
