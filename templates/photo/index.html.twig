{% extends 'base.html.twig' %}

{% block title %}Photo index{% endblock %}

{% block body %}
    <h1>Liste des Photos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td>{{ photo.photo }}</td>
                <td>{{ photo.nom }}</td>
                <td>
                    <a href="{{ path('photo_show', {'id': photo.id}) }}">Afficher</a>
                    <a href="{{ path('photo_edit', {'id': photo.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de résultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('photo_new') }}">Créer une nouvelle Photo</a>
{% endblock %}
