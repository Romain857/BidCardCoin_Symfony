{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Liste des Produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Artiste</th>
                <th>Style</th>
                <th>Region</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.artiste }}</td>
                <td>{{ produit.style }}</td>
                <td>{{ produit.region }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">Afficher</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('produit_new') }}">Créer un nouveau produit</a>
    <a class="btn btn-success" href="{{ path('estimation_index') }}">Voir et Créer une nouvelle Estimation</a>
    <a class="btn btn-success" href="{{ path('ordre_achat_index') }}">Voir et Créer un nouvel Ordre d'Achat</a>
{% endblock %}
